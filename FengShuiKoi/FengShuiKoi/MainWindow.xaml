<Window x:Class="FengShuiKoi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FengShuiKoi"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="LOGIN PAGE" HorizontalAlignment="Center" Height="47" Margin="0,10,0,0" VerticalAlignment="Top" Width="82"/>
        <Label Content="Username:" HorizontalAlignment="Left" Height="39" Margin="26,105,0,0" VerticalAlignment="Top" Width="83"/>
        <Label Content="Password:" HorizontalAlignment="Left" Height="35" Margin="26,217,0,0" VerticalAlignment="Top" Width="83"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="39" Margin="146,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="580"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Height="49" Margin="637,375,0,0" VerticalAlignment="Top" Width="153"/>
        <Button x:Name="btnCancel" HorizontalAlignment="Left" Height="49" Margin="26,370,0,0" VerticalAlignment="Top" Width="153" Content="Cancel" Click="btnCancel_Click"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Height="35" Margin="146,217,0,0" VerticalAlignment="Top" Width="580"/>

    </Grid>
</Window>
